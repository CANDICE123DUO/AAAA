<h1 class="text-center">Create a new category</h1>
<hr>
<%= render "/shared/error_messages" %>
<div class="card">
    <div class="card-body">
        <%= form_with scope: :category, local: true, url: categories_path do |form| %>
        <div class="form-group">
            <%= form.label :name %>
            <%= form.text_field :name, class: 'form-control' %>
        </div>
        <button class="btn btn-success btn-block">Create new category</button>
        <% end %>
    </div>
</div>