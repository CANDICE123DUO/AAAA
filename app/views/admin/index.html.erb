<h1 class="text-center">Admin</h1>
<hr>

<div class="card border-light">
    <div class="card-header">
        <ul class="nav nav-tabs card-header-tabs">
            <li class="nav-item">
                <%= link_to "Courses", dashboard_path, class: "nav-link active" %>
            </li>
            <li class="nav-item">
                <%= link_to "Coordinators", dashboard_coordinators_path, class: "nav-link" %>
            </li>
            <li class="nav-item">
                <%= link_to "Categories", dashboard_categories_path, class: "nav-link" %>
            </li>
        </ul>
    </div>
    <div class="card-body">
        <table class="table">
            <thead>
                <tr>
                    <th>ID</th>
                    <th>Name</th>
                    <th>Prerequisite</th>
                    <th>Thumbs</th>
                    <th>Operate</th>
                </tr>
            </thead>
            <tbody>
                <% @courses.each do |item| %>
                  <tr>
                    <td><%= item.id %></td>
                    <td><%= item.name %></td>
                    <td><%= item.prerequisite %></td>
                    <td>
                        <span><i class="fa fa-thumbs-up"></i> <%= item.thumbs_up %></span>
                        <span><i class="fa fa-thumbs-down"></i> <%= item.thumbs_down %></span>
                    </td>
                    <td>
                        <%= form_with scope: item, url: course_path(item), method: 'delete' do |form| %>
                        <%= link_to "Reset votes", resetvotes_course_path(item), class: "btn btn-primary btn-sm" %>
                        <%= link_to "Edit", edit_course_path(item), class: "btn btn-success btn-sm" %>
                        <%= form.submit "Delete", class: "btn btn-danger btn-sm" %>
                        <% end %>
                    </td>
                  </tr>
                <% end %>
            </tbody>
        </table>
    </div>
</div>