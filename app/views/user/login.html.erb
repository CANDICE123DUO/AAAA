<h1 class="text-center">Coordinator Login</h1>
<hr>
<%= render "/shared/error_messages" %>
<div class="card">
    <div class="card-body">
        <%= form_with scope: :user, local: true, url: user_login_path do |form| %>
        <div class="form-group">
            <%= form.label :email %>
            <%= form.text_field :email, class: 'form-control' %>
        </div>
        <div class="form-group">
            <%= form.label :password %>
            <%= form.text_field :password, class: 'form-control', type: 'password' %>
        </div>
        <button class="btn btn-success btn-block">Log in</button>
        <% end %>
    </div>
</div>