<h1 class="text-center">Contact Us</h1>

<div class="card">
    <div class="card-body">
        <%= form_with local: true, url: sendemail_path do |form| %>
        <div class="form-group">
            <%= form.label :name %>
            <%= form.text_field :name, class: 'form-control' %>
        </div>
        <div class="form-group">
            <%= form.label :message %>
            <%= form.text_area :message, class: 'form-control' %>
        </div>
        <button class="btn btn-success btn-block">Send email</button>
        <% end %>
    </div>
</div>